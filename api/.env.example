# App mode
# single_profile (public read-only demo) | hosted (multi-user) | studio (local)
LATENT_SCOPE_APP_MODE=single_profile
LATENT_SCOPE_READ_ONLY=1

# Used in single_profile mode
LATENT_SCOPE_PUBLIC_DATASET=visakanv-tweets
LATENT_SCOPE_PUBLIC_SCOPE=scopes-001

# Optional hosted safeguards
LATENT_SCOPE_MAX_UPLOAD_MB=1024
LATENT_SCOPE_JOB_TIMEOUT_SEC=1800

# CORS allowlist.
# Use comma-separated origins for multiple frontends.
CORS_ORIGIN=http://localhost:5173

# LanceDB (Cloud or local URI)
LANCEDB_URI=db://tweetscope-mwyfv0
LANCEDB_API_KEY=

# VoyageAI
VOYAGE_API_KEY=
VOYAGE_MODEL=voyage-3

# Server port (local dev only)
PORT=3000

# Optional local filesystem data root (preferred for local dev)
# Example: /Users/you/latent-scope-data
LATENT_SCOPE_DATA=

# Optional remote data root for metadata/parquet artifacts (R2/S3/CDN).
# Can be either:
# - direct file root: https://your-bucket.r2.dev
# - legacy API upstream: http://localhost:5001/api
DATA_URL=
